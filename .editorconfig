root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{html,js,php}]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2

[*.{css,scss}]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2

[{bower.json,composer.json,package.json}]
indent_style = space
indent_size = 2
